{
  "expo": {
    "name": "Women Safety App",
    "slug": "women-safety-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E91E63"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.womensafety.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to share with emergency contacts and show safe routes.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location to share with emergency contacts and show safe routes even when in the background.",
        "NSContactsUsageDescription": "This app needs access to your contacts to add emergency contacts.",
        "NSCameraUsageDescription": "This app needs access to your camera to record video evidence during emergencies.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio evidence during emergencies.",
        "NSCalendarsUsageDescription": "This app may need access to your calendar for emergency scheduling.",
        "NSRemindersUsageDescription": "This app may need access to your reminders for safety alerts.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save emergency recordings.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication and emergency access."
      },
      "associatedDomains": [
        "applinks:womensafety.app"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E91E63"
      },
      "package": "com.womensafety.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.READ_CONTACTS",
        "android.permission.WRITE_CONTACTS",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.SEND_SMS",
        "android.permission.CALL_PHONE",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
      ],
      "intentFilters": [
        {
          "action": "android.intent.action.VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "womensafety.app"
            }
          ],
          "category": [
            "android.intent.category.DEFAULT",
            "android.intent.category.BROWSABLE"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-location",
      "expo-contacts",
      "expo-camera",
      "expo-av",
      "expo-sms",
      "expo-phone-call",
      "expo-device-motion",
      "expo-haptics",
      "expo-secure-store",
      "expo-crypto",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 33,
            "targetSdkVersion": 33,
            "buildToolsVersion": "33.0.0"
          },
          "ios": {
            "deploymentTarget": "11.0"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "scheme": "womensafety",
    "privacy": "public",
    "description": "A comprehensive Women Safety Mobile Application with emergency features, location tracking, and community alerts.",
    "keywords": [
      "women-safety",
      "emergency",
      "safety-app",
      "location-tracking",
      "emergency-contacts"
    ],
    "githubUrl": "https://github.com/yourusername/women-safety-app"
  }
}